<!-- Manufacturers.hbs -->

 <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<h1>Manufacturers</h1>

{{!-- Form to add a record to the table  --}}

<h2>Add a Manufacturer</h2>
<p>To add a new manufacturer, please enter the information below and click 'Submit'!</p>
<form id="add-manufacturer-form-ajax">
    
    <label for="input-manufacturerName-ADD">Manufacturer Name: </label>
    <input type="text" name="input-manufacturerName-ADD" id="input-manufacturerName-ADD" required>


    <label for="input-phoneNumber-ADD">Phone Number: </label>
        <input type="number" name="input-phoneNumber-ADD" id="input-phoneNumber-ADD" required>
 

    <button type="submit" id ="add-button">Submit</button>
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./add_Manufacturers.js" type="application/javascript"></script>



{{!-- Create a table --}}
<table border="1" cellpadding="5" id="manufacturer-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}              <!-- helpers allow you to iterate thru objects and arrays and perform other specialized tasks -->
            <th>
                {{@key}}        <!-- key name for the current iteration step -->
            </th>
            {{/each}}
            
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, dosage, drugid, patientid, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.manufacturerID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.phoneNumber}}</td>
           
        </tr>
        {{/each}}
    </tbody>
</table>


